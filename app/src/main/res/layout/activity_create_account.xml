<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nikit.android.geeghub.meetupkotlin.ui.activity.CreateAccountActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/account_first_name"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:hint="first name"
            android:inputType="text" />

        <EditText
            android:id="@+id/account_secon_name"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:hint="second name"
            android:inputType="text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="birthday" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:inputType="date"
            android:text="12.12.2010"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/account_email"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:hint="email"
            android:inputType="text" />

        <EditText
            android:id="@+id/account_password"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:hint="password"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/account_repeat_password"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:hint="password"
            android:inputType="textPassword" />

        <Button
            android:text="submit"
            android:textAllCaps="true"
            android:id="@+id/account_bt_submit"
            android:background="@drawable/cirled_rectangle"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize" />
    </LinearLayout>
</ScrollView>
